@model Services.ServiceModels.ProfileDTO


@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
    .container{
        margin-top:50px;
    }
    
    .form-group {
        margin-bottom: 1rem;
    }

    .form-control-sm {
        max-width: 400px; 
    }

    .label-sm {
        padding-right: 15px;
    }

    .file-input-sm {
        padding-top: 7px;
    }

    .btn-submit {
        margin-top: 20px;
        align-self:center;
        color:white;
        background-color:teal;
    }
    .btn-submit:hover{
        border:2px solid teal;
        color:teal;

    }
</style>
<div class="container d-flex justify-content-center">
    <div class="w-50">
        <!-- Adjust the width as needed -->
        <h2 class="text-center" style="color:teal">Edit Profile</h2>
        <hr style="background:black" />
        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-3 col-form-label label-sm"></label>
                <div class="col-sm-9">
                    <input asp-for="UserName" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-3 col-form-label label-sm"></label>
                <div class="col-sm-9">
                    <input asp-for="Email" class="form-control form-control-sm" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-3 col-form-label label-sm"></label>
                <div class="col-sm-9">
                    <input asp-for="FirstName" class="form-control form-control-sm" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-3 col-form-label label-sm"></label>
                <div class="col-sm-9">
                    <input asp-for="LastName" class="form-control form-control-sm" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PhoneNumber" class="col-sm-3 col-form-label label-sm"></label>
                <div class="col-sm-9">
                    <input asp-for="PhoneNumber" class="form-control form-control-sm" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-3 col-form-label label-sm"></label>
                <div class="col-sm-9">
                    <input asp-for="Address" class="form-control form-control-sm" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageFile" class="col-sm-3 col-form-label label-sm">Profile Pic</label>
                <div class="col-sm-9 file-input-sm">
                    <input asp-for="ImageFile" type="file" class="form-control-file form-control-sm" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-submit">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



